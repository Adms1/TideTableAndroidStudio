<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popupdata" >

    
    
    <ImageView 
        android:id="@+id/iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg"/>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_background"
	    android:layout_alignRight="@+id/iv_background"
	    android:layout_alignTop="@+id/iv_background"
	    android:layout_alignBottom="@+id/iv_background">
        <TextView
	    android:id="@+id/tv_popup_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:text="03-11-2014"
	    android:textStyle="bold"
	    android:textColor="@android:color/black" />
    </RelativeLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/iv_background"
	    android:layout_alignRight="@+id/iv_background"
	    android:layout_alignTop="@+id/iv_background"
	    android:layout_alignBottom="@+id/iv_background"
	    android:layout_marginLeft="8dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="8dp"
	    android:orientation="vertical" >	
	    <LinearLayout
	        android:id="@+id/ll_head_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginTop="12dp"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/tv_tide_time"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="Tide Time"
	            android:textStyle="bold" />
	        
	        <TextView
	            android:id="@+id/tv_height_ft"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="Height FT"
	            android:textStyle="bold" />

	        
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll_first_line"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="-2dp"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/tv_tide_first"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
				android:paddingRight="8dp"
	            android:gravity="right"
	            android:text="3.29" />
	        
	        <TextView
	            android:id="@+id/tv_height_first"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:text="9.32" />

	        
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll_second_line"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginTop="-2dp"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:orientation="horizontal" >

	         <TextView
	            android:id="@+id/tv_tide_sec"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:paddingRight="8dp"
	            android:text="9.31" />
	        
	        <TextView
	            android:id="@+id/tv_height_sec"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:text="30.28" />

	       
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll_third_line"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:orientation="horizontal" >

			<TextView
	            android:id="@+id/tv_tide_thrd"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
				android:paddingRight="8dp"
	            android:text="16.44" />
	        
	        <TextView
	            android:id="@+id/tv_height_thrd"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:text="10.20" />

		</LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll_forth_line"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_weight="1"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/tv_tide_forth"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:paddingRight="8dp"
	            android:text="22.31" />
	        
	        <TextView
	            android:id="@+id/tv_height_forth"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:text="26.06" />
	    </LinearLayout>
	</LinearLayout>
 </RelativeLayout>
